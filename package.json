{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "nuxt typecheck",
    "ci": "pnpm lint && pnpm typecheck && pnpm build",
    "check:fix": "pnpm lint:fix && pnpm format",
    "db:generate": "drizzle-kit generate",
    "auth:schema": "pnpm dlx @better-auth/cli generate --config scripts/auth-cli.ts --output server/database/auth-schema.ts -y"
  },
  "dependencies": {
    "@nuxt/eslint": "1.9.0",
    "@nuxt/ui": "4.0.1",
    "@nuxthub/core": "0.9.0",
    "@nuxtjs/i18n": "10.1.0",
    "better-auth": "1.3.25",
    "drizzle-orm": "0.44.6",
    "eslint": "9.36.0",
    "nuxt": "4.1.2",
    "resend": "6.1.2",
    "typescript": "5.9.3",
    "vue": "3.5.22",
    "vue-router": "4.5.1",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@react-email/render": "1.3.1",
    "@playwright/test": "1.55.1",
    "drizzle-kit": "0.31.5",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.14",
    "wrangler": "4.40.3"
  }
}
